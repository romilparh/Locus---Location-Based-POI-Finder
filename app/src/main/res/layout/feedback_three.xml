<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="5dp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cv3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        cardElevation="4dp"
        cardUseCompatPadding="true"
        android:layout_margin="1dp"
        android:onClick="openLocusDetails"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:onClick="openLocusDetails"
            android:id="@+id/relativeLayoutH">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/imageLocus"
                android:gravity="center"
                android:src="@mipmap/ic_launcher"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:layout_toRightOf="@id/imageLocus"
                android:text="@string/whatL"
                android:layout_marginLeft="10dp"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="5dp">
        <android.support.v7.widget.CardView
            android:id="@+id/cv"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            cardElevation="4dp"
            cardUseCompatPadding="true"
            android:layout_margin="1dp"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="8dp">
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="10dp">
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:id="@+id/relativeLayout">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:id="@+id/imageQues"
                        android:gravity="center"
                        android:layout_marginTop="1dp"
                        android:src="@drawable/question"/>
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/howto"
                        android:layout_toRightOf="@id/imageQues"
                        android:layout_marginLeft="10dp"
                        android:textSize="25dp"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:onClick="openManualCategory"
                    android:id="@+id/relativeLayout1">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:id="@+id/imageHelp"
                        android:gravity="center"
                        android:src="@drawable/info"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:layout_toRightOf="@id/imageHelp"
                        android:text="@string/viewC"
                        android:layout_marginLeft="10dp"/>
                </RelativeLayout>
                <View
                    style="@style/Divider"
                    android:layout_marginBottom="5dp"
                    />
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_height="wrap_content"
                    android:onClick="openManualSaved"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/relativeLayout2">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:id="@+id/imageHelp2"
                        android:gravity="center"
                        android:src="@drawable/info"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:layout_toRightOf="@id/imageHelp2"
                        android:text="@string/viewS"
                        android:layout_marginLeft="10dp"/>
                </RelativeLayout>
                <View
                    style="@style/Divider"
                    android:layout_marginBottom="5dp"
                    />
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:onClick="openManualNavigation"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/relativeLayout3">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:id="@+id/imageHelp3"
                        android:gravity="center"
                        android:src="@drawable/info"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:layout_toRightOf="@id/imageHelp3"
                        android:text="@string/navigatePlaceNow"
                        android:layout_marginLeft="10dp"/>
                </RelativeLayout>
                <View
                    style="@style/Divider"
                    android:layout_marginBottom="5dp"
                    />
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:onClick="openManualReminder"
                    android:layout_marginBottom="5dp"
                    android:id="@+id/relativeLayout4">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:id="@+id/imageHelp4"
                        android:gravity="center"
                        android:src="@drawable/info"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:layout_toRightOf="@id/imageHelp4"
                        android:text="@string/reminderHelp"
                        android:layout_marginLeft="10dp"/>
                </RelativeLayout>
                <View
                    style="@style/Divider"
                    android:layout_marginBottom="5dp"
                    />
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="5dp"
                    android:onClick="openManualSave"
                    android:layout_height="wrap_content"
                    android:id="@+id/relativeLayout5">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:id="@+id/imageHelp5"
                        android:gravity="center"
                        android:src="@drawable/info"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:layout_toRightOf="@id/imageHelp5"
                        android:text="@string/save_a_place"
                        android:layout_marginLeft="10dp"/>
                </RelativeLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="5dp">
        <android.support.v7.widget.CardView
            android:id="@+id/cv2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            cardElevation="4dp"
            cardUseCompatPadding="true"
            android:onClick="sendEMAIL"
            android:layout_margin="1dp"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="8dp">
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:id="@+id/imageSendFeedback"
                        android:src="@drawable/email"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/send_feedback"
                        android:layout_marginLeft="10dp"
                        android:textSize="25dp"
                        android:layout_toRightOf="@id/imageSendFeedback"
                        />
                </RelativeLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

</LinearLayout>
